{
    "files.trimTrailingWhitespace": true,
    "editor.formatOnSave": true,
    "[javascript]": {
        "editor.tabSize": 2
    },
    "eslint.format.enable": true,
    "[json]": {
        "editor.tabSize": 2,
        "editor.quickSuggestions": {
            "strings": true
        },
        "editor.suggest.insertMode": "replace"
    },
    "[css]": {
        "editor.tabSize": 2
    },
    "[scss]": {
        "editor.tabSize": 2
    },
    "[erb]": {
        "editor.tabSize": 2
    },
    "[ruby]": {
        "editor.tabSize": 2
    },
    "ruby.useBundler": true,
    "ruby.lint": {
        "rubocop": {
            "useBundler": true
        },
        "reek": {
            "useBundler": true
        }
    },
    "ruby.format": "rubocop",
}